<h1>Listing people</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person[:first_name] %></td>
    <td><%= person[:last_name] %></td>
    <td><%= person[:created_at] %></td>
    <td><%= person[:updated_at] %></td>
    <td><%= link_to 'Show', show_person_path(key: person[:key]) %></td>
    <td><%= link_to 'Edit', edit_person_path(key: person[:key]) %></td>
  </tr>
<% end %>
</table>

